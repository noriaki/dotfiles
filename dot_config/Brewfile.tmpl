cask "karabiner-elements"
cask "linearmouse"
cask "maccy"

# Development
cask "iterm2"
cask "visual-studio-code"
cask "ngrok"

# AI
cask "chatgpt"
cask "claude"

# Productivity
cask "google-drive"
cask "miro"
cask "smoothcsv"

