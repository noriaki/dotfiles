# Brewfile - Homebrew Bundle
# Location: ~/.config/Brewfile (via HOMEBREW_BUNDLE_FILE)
# Usage: brew bundle

# =============================================================================
# Formulae (CLI tools)
# =============================================================================

# Version manager (replaces anyenv)
brew "mise"

# Compression
brew "xz"

# Development tools
brew "emscripten"
brew "gh"
brew "git"
brew "gittower/tap/git-flow-next"
brew "groff"
brew "pkgconf"
brew "tig"
brew "tree"

# Shell
brew "starship"
brew "zsh"

{{- if .is_macos }}
# macOS only
brew "mas"
{{- end }}

{{- if .is_linux }}
# Linux only
brew "xclip"
{{- end }}

# =============================================================================
# Casks (GUI applications) - macOS only
# =============================================================================
{{- if .is_macos }}

# Utilities
cask "alt-tab"
cask "karabiner-elements"
cask "linearmouse"
cask "maccy"

# Development
cask "iterm2"
cask "visual-studio-code"

# Fonts
cask "font-plemol-jp-nf"
{{- end }}

# =============================================================================
# Mac App Store - macOS only
# =============================================================================
{{- if .is_macos }}

mas "Amphetamine", id: 937984704
{{- end }}
