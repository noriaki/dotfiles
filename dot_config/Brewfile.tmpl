# Brewfile - Homebrew Bundle
# Location: ~/.config/Brewfile (via HOMEBREW_BUNDLE_FILE)
# Usage: brew bundle

# =============================================================================
# Formulae (CLI tools)
# =============================================================================

# Version manager (replaces anyenv)
brew "mise"

# Compression
brew "xz"

# Cloud
brew "awscli"

# Development tools
brew "emscripten"
brew "ffmpeg"
brew "gh"
brew "git"
brew "git-flow"
brew "groff"
brew "pkgconf"
brew "rust"
brew "tig"
brew "tree"
brew "wabt"

# Shell
brew "starship"
brew "zsh"

{{- if .is_macos }}
# macOS only
brew "mas"
{{- end }}

{{- if .is_linux }}
# Linux only
brew "xclip"
{{- end }}

# =============================================================================
# Casks (GUI applications) - macOS only
# =============================================================================
